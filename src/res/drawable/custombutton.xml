<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/buttonPressedGrad1"
                android:endColor="@color/buttonPressedGrad2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonPressedText" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/buttonFocusedGrad1"
                android:startColor="@color/buttonFocusedGrad2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonFocusedText" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/buttonColorGrad1"
                android:startColor="@color/buttonColorGrad2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonText" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
