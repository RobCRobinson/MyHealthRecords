<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="305dp"
    android:background="@drawable/backrepeat"
    android:id="@+id/LayoutForgotInput"
    >

<TextView android:id="@+id/txtSecretQuestion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/commonText"
			></TextView>

<EditText android:id="@+id/edtSecretAnswerQ" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:width="294dp"
			>
			</EditText>



<Button android:text="@string/buttonConfirm" 
		android:id="@+id/btnConfirmForgot" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:height="25dp"
		android:width="145dp"
		></Button>
		
<Button android:text="@string/buttonUnlockHelp" 
		android:id="@+id/btnUnlockHelp" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:height="70dp"
		android:width="270dp"
		></Button>


</LinearLayout>
