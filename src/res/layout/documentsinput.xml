<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
>
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="305dp"
    android:background="@drawable/backrepeat"
    android:id="@+id/LayoutDocumentInput"
    >

<TextView android:text="@string/txtDateOptional"
			android:id="@+id/DateText01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/commonText"
			></TextView>

<EditText android:id="@+id/edtDocumentInputRecDate" 
			android:selectAllOnFocus="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_below="@id/DateText01"
			android:width="294dp"
			android:height="40dp"
			android:gravity="top"
			>
			</EditText> 
			
<TextView android:text="@string/txtFilename"
			android:id="@+id/DocumentFilenameText01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/commonText"
			></TextView>

		
<EditText android:id="@+id/edtDocumentFilename" 
			android:selectAllOnFocus="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:width="294dp"
			android:height="40dp"
			android:gravity="top"
			android:paddingLeft="1dp"
			android:inputType="text"
			>
			</EditText> 

<RelativeLayout android:id="@+id/RelativeLayout02"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
<Button
    android:id="@+id/btnSelectFile"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="100dp"
    android:layout_height="20dp"
    android:background="@drawable/ic_file"
     />

<Button
    android:id="@+id/btnSelectCamera"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="100dp"
    android:layout_height="20dp"
    android:layout_alignTop="@id/btnSelectFile"
    android:layout_toRightOf="@id/btnSelectFile"
    android:background="@drawable/ic_camera"
    android:layout_marginLeft="94dp"
     />

<Button
    android:id="@+id/btnViewFile"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:layout_below="@id/btnSelectFile"
    android:text="@string/viewFile"  
    android:layout_marginTop="10dp"
    android:layout_marginLeft="96dp"  
     />

</RelativeLayout>
			  
 <TextView android:text="@string/txtNotes"
			android:id="@+id/NotesText01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/commonText"
			></TextView>   
    
<EditText android:id="@+id/edtInputDocumentDetail" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:width="294dp"
			android:height="140dp"
			android:gravity="top"
			>
			</EditText>

<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">

<Button android:text="@string/buttonSave" 
		android:id="@+id/btnSaveDocument" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:height="25dp"
		android:width="145dp"
		></Button>
<Button android:text="@string/buttonDelete" 
		android:id="@+id/btnDeleteDocument" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/btnSaveDocument"
		android:layout_alignTop="@id/btnSaveDocument"
		android:height="25dp"
		android:width="145dp"
		></Button>

</RelativeLayout>
</LinearLayout>
</ScrollView>
